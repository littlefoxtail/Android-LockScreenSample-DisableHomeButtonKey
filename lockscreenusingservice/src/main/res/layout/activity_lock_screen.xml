<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allWindowLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    >
  <ImageSwitcher
      android:id="@+id/bigAlbumCover"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@drawable/playpage_background"
      />
  <View
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@drawable/lock_mask"
      />
  <TextView
      android:id="@+id/lockScreenCurrentTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="28.0dip"
      android:layout_marginTop="65.0dip"
      android:textColor="#cdffffff"
      android:textSize="44.0sp"
      android:typeface="normal"
      />
  <TextView
      android:id="@+id/closeDeadtime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/lockScreenCurrentTime"
      android:layout_marginLeft="12.0dip"
      android:layout_toRightOf="@+id/lockScreenCurrentTime"
      android:drawableLeft="@drawable/lock_icn_time"
      android:drawablePadding="6.0dip"
      android:textColor="#9affffff"
      android:textSize="14.0sp"
      />
  <TextView
      android:id="@+id/lockScreenDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/lockScreenCurrentTime"
      android:layout_marginLeft="30.0dip"
      android:layout_marginTop="-2.0dip"
      android:textColor="#cdffffff"
      android:textSize="15.0sp"
      />
  <TextView
      android:id="@+id/musicName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/lockScreenDate"
      android:layout_gravity="center_horizontal"
      android:layout_marginLeft="30.0dip"
      android:layout_marginTop="13.0dip"
      android:textColor="#cdffffff"
      android:textSize="15.0sp"
      />
  <TextView
      android:id="@+id/artistName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/musicName"
      android:layout_gravity="center_horizontal"
      android:layout_marginLeft="30.0dip"
      android:layout_marginTop="1.0dip"
      android:textColor="#9affffff"
      android:textSize="13.0sp"
      />
  <TextView
      android:id="@+id/lockScreenLyric"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/lockScreenControlPanel"
      android:layout_marginBottom="15.0dip"
      android:layout_marginLeft="30.0dip"
      android:layout_marginRight="30.0dip"
      android:gravity="center"
      android:textColor="#9affffff"
      android:textSize="14.0sp"
      android:visibility="gone"
      />
  <TextView
      android:id="@+id/rawTranslateLyric"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/translatedLockScreenLyric"
      android:layout_marginBottom="6.0dip"
      android:layout_marginLeft="30.0dip"
      android:layout_marginRight="30.0dip"
      android:gravity="center"
      android:textColor="#9affffff"
      android:textSize="18.0sp"
      android:visibility="gone"
      />
  <TextView
      android:id="@+id/translatedLockScreenLyric"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/lockScreenControlPanel"
      android:layout_marginBottom="15.0dip"
      android:layout_marginLeft="30.0dip"
      android:layout_marginRight="30.0dip"
      android:gravity="center"
      android:textColor="#9affffff"
      android:textSize="13.0sp"
      android:visibility="gone"
      />
  <LinearLayout
      android:id="@+id/lockScreenControlPanel"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/lockSlider"
      android:layout_marginBottom="25.0dip"
      android:layout_marginLeft="30.0dip"
      android:layout_marginRight="30.0dip"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/trashButton"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:src="@drawable/lock_btn_del"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/lockScreenPre"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:src="@drawable/lock_btn_prev"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/lockScreenPlay"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:src="@drawable/lock_btn_pause"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/lockScreenNext"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:src="@drawable/lock_btn_next"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/praiseButton"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:src="@drawable/lock_btn_praise"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/starButton"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:layout_weight="1.0"
        android:src="@drawable/lock_btn_love"
        android:visibility="gone"
        />
  </LinearLayout>
  <ImageView
      android:id="@+id/lockSlider"
      android:layout_width="100.0dip"
      android:layout_height="18.0dip"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="30.0dip"
      />
</RelativeLayout>